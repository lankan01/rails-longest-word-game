<h1>New Game</h1>

<% @letters.each do |letter| %>
  <div><%= letter %></div>
<% end %>

<p>What is the longest word you can find?</p>
  <form action="/score" class="form-inline" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%# <%= hidden_field_tag :grid, @letters %>
    <div class="input-group mb-3">
      <input type="text" name="word" class="form-control" placeholder="Type answer here..">
      <div class="input-group-append">
        <input type="submit" value="Play" class="form-control btn btn-primary">
      </div>
  </form>
